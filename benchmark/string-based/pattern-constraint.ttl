@prefix ex: <http://example.org/ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# Shape
ex:PatternExampleShape
    a sh:NodeShape ;
    rdfs:seeAlso <https://www.w3.org/TR/shacl/#PatternConstraintComponent> ;
    rdfs:label "Pattern Example" ;
    rdfs:comment "The value of the property ex:bCode should be a literal with the regular expression '^B' whereas case sensitivity does not matter." ;
    sh:property [
        sh:path ex:bCode ;
        sh:pattern "^B" ;    # starts with 'B'
        sh:flags "i" ;       # Ignore case
    ] .

# Targeting
ex:PatternExampleShape
    sh:targetNode ex:bob, ex:alice, ex:carol .
